<% if current_user != post.user %>
  <% if current_user.following?(post.user) %>
    <%= link_to "フォロー外す", user_relationships_path(post.user.id), data: {turbo_method: :delete} %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(post.user.id), data: {turbo_method: :post} %>
  <% end %>
<% end %>