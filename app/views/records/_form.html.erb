<%= form_with model: @record, local: true do |f| %>
    <%= render 'shared/error_message', object: f.object  %>
      <div class= 'form_group'>
      <%= f.label :date %>
      <%= f.date_select :date, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :started_time %>
      <%= f.time_select :started_time, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :finished_time %>
      <%= f.time_select :finished_time, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :memo %>
      <%= f.text_area :memo, class: 'form-control', size: "40x10" %>
    </div>
    <%= f.submit nil, class: 'btn btn-custom col-2 mt-2' %>
  <% end %>
   
