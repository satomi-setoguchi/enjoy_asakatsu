<% content_for :title, t('.title') %>
<div class="container">
  <h2 class="text-center mt-4 mb-3"><%= t('.title') %></h2>
  <div class="col-md-8 col-sm-10 mx-auto">
    <ul>
      <li>日付：<%= @record.date %></li>
      <li>開始時刻：<%= l @record.started_time, format: :time %></li>
      <li>終了時刻：<%= l @record.finished_time, format: :time %></li>
    </ul>
    <p>活動内容:
    <div class='card col-7'>
      <div class="card-body">
        <p class='card-text'><%= simple_format(@record.content) %>
      </div>
    </div>
    <p>メモ:
    <div class='card'>
      <div class="card-body">
        <p class='card-text'><%= simple_format(@record.memo) %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-2">
  <%= link_to t('.edit'), edit_record_path(@record), class: 'btn btn-custom col-2' %>
</div>
<div class="d-flex justify-content-center mt-2">
  <%= link_to t('.destroy'), record_path(@record), class: 'btn btn-custom col-2', data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_caution') } %>
</div>
<div class="d-flex justify-content-center mt-5">
  <%= link_to t('.back'), records_path, class: 'btn btn-custom col-2' %>
</div>