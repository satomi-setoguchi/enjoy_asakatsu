<div class="container">
  <h2 class="text-center mt-4 mb-3"><%= t('.title') %></h2>
  <div class="mx-auto", style="width: 640px">
    <ul>
      <li>日付：<%= @record.date %></li>
      <li>開始時刻：<%= l @record.started_time, format: :time %></li>
      <li>終了時刻：<%= l @record.finished_time, format: :time %></li>
    </ul>
    <p>活動内容:
    <div class='card', style="width: 25rem;">
      <div class="card-body">
        <p class='card-text'><%= simple_format(@record.content) %>
      </div>
    </div>
    <p>メモ:
    <div class='card', style="width: 40rem;">
      <div class="card-body">
        <p class='card-text'><%= simple_format(@record.memo) %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-2">
  <%= link_to t('.edit'), edit_record_path(@record), class: 'btn btn-custom col-2' %>
</div>
<div class="d-flex justify-content-center mt-2">
  <%= link_to t('.destroy'), record_path(@record), class: 'btn btn-custom col-2', data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } %>
</div>
<div class="d-flex justify-content-center mt-5">
  <%= link_to t('.back'), records_path, class: 'btn btn-custom col-2' %>
</div>