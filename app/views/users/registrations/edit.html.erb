<% content_for :title, t('.title') %>
<h2 class="text-center mt-4 mb-3"><%= t('.title') %></h2>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-10 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'shared/error_message', object: f.object  %>

        <div class='form-group mt-2'>
          <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control', accept: 'image/*' %>
        </div>
        <% if @user.avatar.present? %>
          <div class='form-group col-10 mt-2'>
            <%= image_tag @user.avatar.url, class: 'img-thumbnail' %>
            <%= check_box_tag 'user[remove_avatar]', '1', false %> 画像を削除する
          </div>
        <% end %>
        <div class= 'form_group mt-2'>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class='form-group mt-2'>
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
      
        <%= f.submit nil, class: 'btn btn-custom col-2 my-2' %>
      <% end %>
    </div>
  </div>
</div>